{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false,
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["react-app"],
  "env": {
    "browser": false,
    "jest": true
  },
  "rules": {
    "prefer-promise-reject-errors": ["off"],
    "react/jsx-filename-extension": ["off"],
    "no-plusplus": ["off"],
    "react/prop-types": ["off"],
    "no-return-assign": ["off"],
    "prefer-template": ["off"],
    "no-use-before-define": ["off"]
  }
}
